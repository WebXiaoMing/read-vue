@font-face
  font-family: 'read-icon';
  src url('../fonts/read-icon.eot'); /* IE9*/
  src url('../fonts/read-icon.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
        url('../fonts/read-icon.woff') format('woff'), /* chrome、firefox */
        url('../fonts/read-icon.ttf') format('truetype'), /* chrome、firefox、opera、Safari, Android, iOS 4.2+*/
        url('../fonts/read-icon.svg#uxread-icon') format('svg'); /* iOS 4.1- */
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  /* use !important to prevent issues with browser extensions that change fonts */
  font-family 'read-icon' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

